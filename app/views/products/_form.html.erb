<div class="container">
  <%= form_for @product do |p| %>
    <div class="form-group">
      <label for="title">Title</label>
      <%= p.text_field :title, class: "form-control", id: "title" %>
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <%= p.text_area :description, row: 6, class: "form-control", id: "description" %>
    </div>
    <div class="form-group">
      <label for="image">Image</label>
      <%= p.text_field :image_url, class: "form-control", id: "image" %>
    </div>
    <div class="form-group">
      <label for="price">Price</label>
      <%= p.text_field :price, class: "form-control", id: "price" %>
    </div>
    <%= p.submit %>
  <% end %>
</div>